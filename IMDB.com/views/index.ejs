<%- include('components/header'); -%>

        <!-- adding actor -->
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card blue-grey darken-1">
                <div class="card-content white-text add-content">
                    <span class="card-title" id="add-title">Add Movie</span>
                    <form name="" id="add-frm">
